@model IEnumerable<ProductViewModel>


<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Товары</h2>

@foreach(var product in Model) { 
    <div class="col-sm-4">
        <div class="product-image-wrapper">
            <div class="single-products">
                <div class="productinfo text-center">
                    <img src="~/images/home/@product.ImageUrl" alt="" />
                    <h2>@product.Price</h2>
                    <p><a asp_controller="Catalog" asp-action="Details" asp_route_id="@product.Id">@product.Name</a></p>
                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Добавить в корзину</a>
                </div>
                <div class="product-overlay">
                    <div class="overlay-content">
                        <h2>@product.Price</h2>
                        <p><a asp_controller="Catalog" asp-action="Details" asp_route_id="@product.Id">@product.Name</a></p>
                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Добавить в корзину</a>
                    </div>
                </div>
            </div>
            <div class="choose">
                <ul class="nav nav-pills nav-justified">
                    <li><a href="#"><i class="fa fa-plus-square"></i>Добавить желания</a></li>
                    <li><a href="#"><i class="fa fa-plus-square"></i>Добавить к сравнению</a></li>
                </ul>
            </div>
        </div>
    </div>
}
</div><!--features_items-->